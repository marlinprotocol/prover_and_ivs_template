FROM rust:1.85-bookworm AS builder

WORKDIR /app

COPY Cargo.toml .
COPY Cargo.lock .

RUN mkdir src && echo "pub fn main() {}" > src/main.rs

RUN cargo build --release

RUN rm -rf src

COPY . .

RUN cargo build --release --bin ivs

FROM debian:bookworm-slim

WORKDIR /app

COPY --from=builder /app/target/release/ivs /app/

ENTRYPOINT [ "/app/ivs" ]
